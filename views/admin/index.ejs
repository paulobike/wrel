        <div class="row">
          <div class="col-xl-8">
            <div class="card">
              <div class="card-header border-0">
                <div class="row align-items-center">
                  <div class="col">
                    <h3 class="mb-0">Latest members</h3>
                  </div>
                </div>
              </div>
              <div class="table-responsive">
                <!-- Projects table -->
                <table class="table align-items-center table-flush">
                  <thead class="thead-light">
                    <tr>
                      <th scope="col">Name</th>
                      <th scope="col">Username</th>
                      <th scope="col">Date</th>
                      <th scope="col">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if(users.length) { %>
                      <% for(let i = 0 ; i < 3; i++) { %>
                        <% if(users[i]) { %>
                          <tr>
                            <th scope="row">
                              <%= users[i].firstname %>
                            </th>
                            <td>
                              <%= users[i].username %>
                            </td>
                            <td><%= ((new Date(users[i].registered)).toLocaleDateString()) %></td>
                              <td>
                                  <a href="/admin/users/<%= users[i]._id %>"><i class="fa fa-edit text-default"></i></a>
                                  <form action="/admin/users/<%= users[i]._id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                      <button type="submit" data-route="" class="border-0"><i class="fa fa-trash-alt text-warning"></i></a>
                                  </form>
                              </td> 
                          </tr>
                        <% } %>
                      <% } %>
                    <% } else { %>
                      <tr>
                        <th colspan="4" class="lead text-center" style="font-size: 1.25rem; font-weight: 300;">
                          Nothing to show here!
                        </th>
                    </tr>
                    <% } %>
                      
                  </tbody>
                </table>
              </div>
            </div>
          </div>
