<%- include('../partials/header") %>

<!-- Header -->
    <div class="header bg-default pb-6">
      <div class="container-fluid">
        <div class="header-body">
          <div class="row align-items-center py-4">
            <div class="col-lg-6 col-7">
              <h6 class="h2 text-white d-inline-block mb-0">Wallet</h6>
              <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                  <li class="breadcrumb-item"><a href="#"><i class="fas fa-home text-default"></i></a></li>
                  <li class="breadcrumb-item active" aria-current="page">Wallet</li>
                </ol>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="container-fluid mt--6">
      <div class="row justify-content-center">
        <div class=" col-lg-9 ">
          <div class="card">
            <div class="card-body">
                <form method="POST">
                    <h6 class="heading-small text-muted mb-4">Wallet details</h6>
                    <div class="pl-lg-4">
                      <div class="row">
                        <div class="col-lg-6">
                          <div class="form-group">
                            <label class="form-control-label" for="tokenName ">Token name</label>
                            <input type="text" class="form-control border-input" disabled value="<%= wallet.tokenName %>" id="tokenName">
                          </div>
                        </div>
                        <div class="col-lg-6">
                          <div class="form-group">
                            <label class="form-control-label" for="tokenShort">Short name</label>
                            <input type="text" class="form-control border-input" disabled value="<%= wallet.tokenShort %>" id="tokenShort">
                          </div>
                        </div>
                        <div class="col-lg-6">
                          <div class="form-group">
                            <label class="form-control-label" for="address">Wallet address</label>
                            <input type="text" class="form-control border-input" disabled value="<%= wallet.address %>" id="address">
                          </div>
                        </div>
                        <div class="col-lg-6">
                          <div class="form-group">
                            <label class="form-control-label" for="displayName">Display name</label>
                            <input type="text" class="form-control border-input" disabled value="<%= wallet.displayName %>" id="displayName">
                          </div>
                        </div>
                        <div class="col-lg-6">
                          <div class="form-group">
                              <label class="form-control-label" for="date">Date</label>
                              <input type="text" class="form-control border-input" disabled value="<%= wallet.date.toLocaleString() %>" id="date">
                          </div>
                        </div>
                        <div class="col-lg-6">
                          <div class="form-group">
                              <label class="form-control-label" for="memo">Memo</label>
                              <input type="text" class="form-control border-input" disabled value="<%= wallet.memo || '---' %>" id="memo">
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-9 col-sm-6 col-md-4 mx-auto mt-2" id="canvascontainer">
                          <canvas id="canvas" style="width: 100%; border: 3px solid var(--default); border-radius: 2%;"></canvas>
                        </div>
                        
                      </div>
                    </div>
                  </form>
            </div>
          </div>
        </div>
      </div>
    </div>
        <!-- Footer -->
<script src="/build/qrcode.js"></script>
<script>
  let containerWidth = document.getElementById("canvascontainer").offsetWidth;
  let address = document.getElementById("address").value;
  let canvas = document.getElementById('canvas');
  QRCode.toCanvas(canvas, address, { width: containerWidth - 30, color: {dark: 'var(--default)'} }, function (error) {
    if (error) console.error(error)
  })
</script>
<%- include('../partials/footer") %>