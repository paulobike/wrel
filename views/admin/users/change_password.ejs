<%- include('../partials/header') %>

<!-- Header -->
    <div class="header bg-default pb-6">
      <div class="container-fluid">
        <div class="header-body">
          <div class="row align-items-center py-4">
            <div class="col-lg-6 col-7">
              <h6 class="h2 text-white d-inline-block mb-0">Change Password</h6>
              <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                  <li class="breadcrumb-item"><a href="#"><i class="fas fa-home text-default"></i></a></li>
                  <li class="breadcrumb-item active" aria-current="page">Change Password</li>
                </ol>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="container-fluid mt--6">
      <div class="row justify-content-center">
        <div class=" col-lg-9 ">
          <div class="card">
            <div class="card-body">
                <form method="POST" action="/admin/users/<%= duser._id %>/change_password">
                    <h6 class="heading-small text-muted mb-4"><%= duser.username %></h6>
                    <div class="pl-lg-4">
                      <div class="row">
                      </div>
                      <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                              <label class="form-control-label" for="password">New password</label>
                              <input required type="password" id="password" class="form-control" placeholder="*****" name="password">
                            </div>
                        </div>
                        <div class="col-lg-6">
                          <div class="form-group">
                            <label class="form-control-label" for="confirm-password">Retype new password</label>
                            <input required type="password" id="confirm_password" class="form-control" placeholder="*****">
                          </div>
                        </div>
                      </div>
                    <button type="submit" class="btn btn-default mt-2">Submit</button>
                    </div>
                  </form>
            </div>
          </div>
        </div>
      </div>
    </div>
        <!-- Footer -->

<%- include('../partials/footer') %>