<%- include('partials/header') %>
    <div id="s63">





        <span>&nbsp; </span> <br>
        <div id="appAreaNoWidthClearFix">
            <div id="login-div-content">
                <div class="outer-border">
                    <div class="header-block">
                        <div class="banner-header">
                            <strong>
                                <a href="/account/login">User Login</a>
                                &nbsp;&gt;&nbsp;Password Recovery
                            </strong>
                        </div>
                    </div>
                </div>
                <div class="outer-border">
                    <span>&nbsp; </span> <br>
                    <table width="80%" cellspacing="0" cellpadding="2" border="0">
                        <tbody>
                            <tr valign="top">
                                <td width="1%">
                                    <p> </p>
                                </td>
                                <td width="70%">
                                    <span><strong>What if I forgot my Password?</strong></span> <br>

                                    <span>If you cannot remember your password, we can send you the reminder hint and a
                                        link to reset your password. Provide your user name and the email address that
                                        you used to register.<span>

                                            <span></span> <br> <br>
                                        </span></span>
                                </td>
                                <td width="29%">
                                    &nbsp;
                                </td>
                            </tr>
                            <tr valign="top">
                                <td width="1%">
                                    &nbsp;
                                </td>
                                <td width="70%">
                                    <form id="lmainForgotPasswordForm" action="/account/forgot_password" method="post">
                                        <div class="login-form">
                                            <div class="input-border">
                                                <table summary="layout table">
                                                    <tbody>
                                                        <% if(error && error.length > 0) { %>
                                                            <tr>
                                                                <td colspan="3">
                                                                <span class="ErrorMessage"><%= error %></span>
                                                                </td>
                                                            </tr>
                                                        <% } %>
                                                        <% if(success && success.length > 0) { %>
                                                            <tr>
                                                                <td colspan="3">
                                                                <span class="SuccessMessage"><%= success %></span>
                                                                </td>
                                                            </tr>
                                                        <% } %>
                                                        <tr>
                                                            <td colspan="3">
                                                                <span><strong>Account Information</strong></span>
                                                            </td>
                                                        </tr>

                                                        <tr>
                                                            <td colspan="3">
                                                                <p class="Hint">* = Required Fields</p>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <p>*</p>
                                                            </td>
                                                            <td>
                                                                <p><label for="USERNAME_3">Username:</label></p>
                                                            </td>
                                                            <td>
                                                                <input type="text" name="username" id="USERNAME_3"
                                                                    value="" size="20" maxlength="60">
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <p>*</p>
                                                            </td>
                                                            <td>
                                                                <p><label for="Email_1">Email:</label></p>
                                                            </td>
                                                            <td>
                                                                <input type="text" name="email" id="Email_1"
                                                                    maxlength="100">
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                            <div class="actions">
                                                <input type="submit" name="SendPassword" id="SendPassword"
                                                    value="Submit" class="uc-button">
                                            </div>
                                            <input type="hidden" name="SendPassword" id="SendPassword" value="submit">
                                        </div>
                                    </form>
                                </td>
                                <td width="29%">
                                    <div class="right-block">
                                        <span><strong>Login Assistance</strong></span> <br> <br>
                                        <span><a href="/account/forgot_username">Forgot Username? </a></span> <br>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="footer-block"> &nbsp;</div>
                </div>
            </div>
        </div>
    </div>
    <%- include('partials/footer') %>