<%- include ("partials/header") %>


    <!-- Header -->
    <!-- Header -->
    <div class="header bg-default  pb-6">
      <div class="container-fluid">
        <div class="header-body">
          <div class="row align-items-center py-4">
            <div class="col-12">
              <h6 class="h2 text-white d-inline-block mb-0">Withdrawal history</h6>
              <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                  <li class="breadcrumb-item"><a href="/"><i class="fas fa-home text-default"></i></a></li>
                  <li class="breadcrumb-item active">Withdrawal history</li>
                </ol>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Page content -->
    <div class="container-fluid mt--6">
        
        <div class="row mt-4 justify-content-center">
            <div class="">
                <div class="card" style="max-width: 95vw;">
                    <div class="table-responsive">
                    <!-- Projects table -->
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th class="text-capitalize">Amount Requested</th>
                                    <th class="text-capitalize">Currency</th>
                                    <th class="text-capitalize">Description</th>
                                    <th class="text-capitalize">Date Requested</th>
                                    <th class="text-capitalize">Paid</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(withdraws.length) { %>
                                    <% withdraws.forEach(e => { %>
                                        <tr>
                                            <td class="text-capitalize">
                                                <%= config.currency_unit %><%= e.amount %>
                                            </td>
                                            <td class="text-capitalize">
                                                <%= e.cryptoType == 'usd'? 'Perfect money': e.cryptoType %>
                                            </td>
                                            <td class="text-capitalize">
                                                <%= (e.description.substring(0, 10) + "...") || "-" %>
                                            </td>
                                            <td class="text-capitalize">
                                                <%= ((new Date(e.date)).toLocaleDateString()) %>
                                            </td>
                                            <td class="text-capitalize">
                                                <%= e.delivered ?  "Yes": "No" %>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <th colspan="4" class="lead text-center" style="font-size: 1.25rem; font-weight: 300;">
                                        You have not made any withdraws!
                                        </th>
                                    </tr>
                                <% } %>
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>                    
        </div>
    </div>
      
      <!-- Footer -->
      
<%- include ("partials/footer") %>