<%- include ("../partials/header") %>

<!-- Header -->
    <div class="header bg-default pb-6">
      <div class="container-fluid">
        <div class="header-body">
          <div class="row align-items-center py-4">
            <div class="col-lg-6 col-7">
              <h6 class="h2 text-white d-inline-block mb-0">KYC application</h6>
              <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                  <li class="breadcrumb-item"><a href="#"><i class="fas fa-home text-default"></i></a></li>
                  <li class="breadcrumb-item active" aria-current="page">KYC application</li>
                </ol>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="container-fluid mt--6">
      <% if(kyc.status === 'pending') { %>
        <div class="alert alert-warning">Your kYC application is currently in review.</div>
      <% } %>
      <% if(kyc.status === 'approved') { %>
        <div class="alert alert-success">Your kYC application has been approved.</div>
      <% } %>
      <% if(kyc.status === 'rejected') { %>
        <div class="alert alert-danger">Your kYC application has been rejected, contact support.</div>
      <% } %>
      <div class="row justify-content-center">
        <div class="col-sm-5">
          <div class="card">
            <div class="card-body">
              <h6 class="heading-small text-muted mb-4">Document <span class="float-right"><%= kyc.fileType %></span></h6>
              <div class="card">
                <img src="<%= url + '/' + kyc.file %>" class="card-img-top" alt="...">
              </div>
            </div>
            <div class="card-footer">
              <a href="<%= url + '/' + kyc.file %>">View document</a>
            </div>
          </div>
        </div>
        <div class="col-sm-7">
          <div class="card">
            <div class="card-body">
              <h6 class="heading-small text-muted mb-4">Personal Information</h6>
              <div class="border rounded">
                <ul class="list-group list-group-flush">
                  <li class="list-group-item"><span>Firstname</span><span class="float-right text-primary heading-small"><%= kyc.firstname %></span></li>
                  <li class="list-group-item"><span>Lastname</span><span class="float-right text-primary heading-small"><%= kyc.lastname %></span></li>
                  <li class="list-group-item"><span>Email</span><span class="float-right text-primary heading-small"><%= kyc.email %></span></li>
                  <li class="list-group-item"><span>Tel</span><span class="float-right text-primary heading-small"><%= kyc.phone %></span></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="row text-left w-100">
          <div class="col-md-6">
            <div class="card">
              <div class="card-body">
                <h6 class="heading-small text-muted mb-4">Address</h6>
                <p><%= kyc.street %>, <%= kyc.city %>. <%= kyc.state %>.</p>
                <p><%= kyc.country %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
        <!-- Footer -->

<%- include ("../partials/footer") %>