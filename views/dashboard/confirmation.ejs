<%- include ("partials/header") %>

    <!-- Header -->
    <div class="header bg-default  pb-6">
      <div class="container-fluid">
        <div class="header-body">
          <div class="row align-items-center py-4">
            <div class="col-12">
              <h6 class="h2 text-white d-inline-block mb-0">Deposit confirmation</h6>
              <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                  <li class="breadcrumb-item"><a href="/"><i class="fas fa-home text-default"></i></a></li>
                  <li class="breadcrumb-item active">Deposit confirmation</li>
                </ol>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Page content -->
    <div class="container-fluid mt--6">
        <div class="card">
            <div class="card-body">
                <div class="card-text">
                    <div class="table-responsive">
                        <!-- Projects table -->
                        <table class="table align-items-center table-flush">
                          <tbody>
                            <tr>
                              <th scope="row">
                                Beneficiary:
                              </th>
                              <td>
                                  <%= user.username %>
                              </td>
                            <tr>
                              <tr>
                                <th scope="row">
                                  Currency:
                                </th>
                                <td>
                                <%= coin.tokenShort %>
                                </td>
                              <tr>
                              <th scope="row">
                                Principal Return:
                              </th>
                              <td>
                                Yes
                              </td>
                            </tr>
                            <tr>
                              <th scope="row">
                                Credit Amount:
                              </th>
                              <td>
                                <%= config.currency_unit %><%= amount %>
                              </td>
                            </tr>
                            <tr>
                              <th scope="row">
                                Deposit Fee:
                              </th>
                               <td>
                                <%= config.currency_unit %>0.00
                              </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                  Total:
                                </th>
                                <td>
                                  <%= config.currency_unit %><%= amount %>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2" scope="row" class="pt-5">
                                    <a href="/dashboard/deposit" class="btn btn-default">Back</a>
                                    <form action="/dashboard/deposit/crypto" method="POST" class="d-inline">
                                        <input type="number" name="amount" value="<%= amount %>" hidden>
                                        <input type="text" name="method" value="<%= coin._id %>" hidden>
                                        <button type="submit" class="btn btn-primary">Confirm</button>                                            
                                    </form>
                                </td>
                            </tr>
                          </tbody>
                        </table>
                      </div>
                </div>
            </div>
        </div>
      
      <!-- Footer -->
      
<%- include ("partials/footer") %>
  