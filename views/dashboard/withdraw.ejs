<%- include ("partials/header") %>

<!-- Header -->
    <div class="header bg-default pb-6">
      <div class="container-fluid">
        <div class="header-body">
          <div class="row align-items-center py-4">
            <div class="col-lg-6 col-7">
              <h6 class="h2 text-white d-inline-block mb-0">Withdraw</h6>
              <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                  <li class="breadcrumb-item"><a href="#"><i class="fas fa-home text-default"></i></a></li>
                  <li class="breadcrumb-item active" aria-current="page">Withdraw</li>
                </ol>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="container-fluid mt--6">
      <div class="row justify-content-center">
        <div class=" col ">
          <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4 mb-4">
                      <div class="list-group" id="list-tab" role="tablist">
                        <div class="lead mt-1">We Pay</div>
                        <div class="list-group-item list-group-item-action" id="btc-list"><span class="fab fa-bitcoin mr-1" style="margin-top: 0.125rem;"></span>Bitcoin (BTC)</div>
                            <div class="list-group-item list-group-item-action" id="bch-list"><span class="fab fa-bitcoin mr-1" style="margin-top: 0.125rem;margin-top: 0.125rem;
                              transform: rotate(-30deg);
                              border: 1px solid orange;
                              border-radius: 50%;"></span>Bitcoin cash (BCH)</div>
                            <div class="list-group-item list-group-item-action" id="eth-list"><span class="fab fa-ethereum mr-1" style="margin-top: 0.125rem;"></span>Ethereum (ETH)</div>
                            <div class="list-group-item list-group-item-action" id="pm-list"><img src="/assets/icon-fonts/dogecoin.svg" class="mr-1" style="margin-right: 0 !important; margin-left: -.3rem;" width="25"></span>Dogecoin (DOGE)</div>
                    </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="tab-content" id="nav-tabContent">
                            <div class="tab-pane fade show active" id="btc" role="tabpanel" aria-labelledby="btc-list">
                                <div class="card border-0">
                                    <div class="card-header border-0 text-default pb-0">
                                      <h6 class="heading-small text-muted mb-4"><span class="float-right">Balance: <%= config.currency_unit %><%= user.balance %></span></h6>
                                    </div>
                                    <div class="card-body pt-0">
                                        <form action="/dashboard/withdraw" method="post">
                                            <div class="form-group">
                                                <label class="form-control-label" for="amount">Amount (<%= config.currency_unit %>):</label>
                                                <input type="number" id="amount" class="form-control" min="20" value="20" name="amount" required>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-5">
                                                    <div class="form-group">
                                                        <label class="form-control-label" for="package">Withdrawal method:</label>
                                                        <select id="payment_method" class="form-control text-capitalize"name="cryptoType" required>
                                                          <% wallets.forEach(wallet => { %>
                                                            <option value="<%= wallet.tokenShort %>"><%= wallet.displayName %></option>
                                                          <% }) %>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-lg-7">
                                                    <div class="form-group">
                                                        <label class="form-control-label" for="title">Wallet Title (If any):</label>
                                                        <input type="text" id="title" class="form-control" name="title">
                                                    </div>
                                                </div>
                                            </div>                                            
                                            <div class="form-group">
                                                <label class="form-control-label" for="address">Wallet address / Perfect money account:</label>
                                                <input type="text" id="address" class="form-control" name="address" required>
                                                <p class="small">
                                                    Please ensure that you provide the correct address. <%= config.name || 'Investment project' %> will not be held
                                                    responsible for errors in the details you provide.
                                                </p>
                                            </div>
                                            <div class="form-group">
                                                <label class="form-control-label" for="description">Description (If any):</label>
                                                <textarea id="description" class="form-control" name="description"></textarea>
                                            </div>
                                            <input type="submit" value="Withdraw" class="btn btn-primary">
                                        </form>
                                        <div class="card-footer mt-3">
                                            <a href="/dashboard/withdraw/history" class="">Withdrawal History</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include ("partials/footer") %>